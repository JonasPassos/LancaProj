@page
@model LancaProj.Pages.LancaTable.IndexModel

@{
    ViewData["Title"] = "Folgas";
}

<h1>Gerenciador de Funcionários</h1>

<p>
    <a asp-page="Create">Novo funcionário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adm[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adm[0].Funcao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adm[0].Dia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Adm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
